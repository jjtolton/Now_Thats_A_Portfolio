[defn captcha
     ; case 1: one argument passed
     ; this is the "public" case .. the 4 argument case is only used internally
     [[s]
     ;  s is a string or list of decimal strings
      [let [sn  [mapv py/int s]           ; convert str to list of ints
            ns  [into [] [append sn sn]]  ; append sn to sn and realize,
                                          ; lazy hack to avoid calculating wrap
            len [count sn]]               ; length of sn
        ; invoke case 2
        [captcha 0 ns len 0]]]

    ; case 2: 4 arguments passed
    ; only used internally
     [[acc ns len c]
      ; acc - accumulated results
      ; ns  - numbers
      ; len - length of list
      ; c   - counter
      [if [= len c] ; terminate if counter is length of list
          acc
          [let [cur  [get ns c]                    ; current item in list
                addr [add c [py/int [div len 2]]]  ; index of item half way around list
                jmp  [get ns addr]                 ; item half way around list
                m    [if [= cur jmp] cur 0]]       ; amount to add to acc... m for match
            [captcha [add acc m] ; add m to acc ..
                     ns          ; repass list
                     len         ; repass len
                     [inc c]]]]]]; increment counter
[defn tests []
   [begin
     ; 1212 produces 6: the list contains 4 items, and all four digits match the digit 2 items ahead.
     [assert 6 [captcha '1212']]
;    1221 produces 0, because every comparison is between a 1 and a 2.
     [assert 0 [captcha '1221']]
;    123425 produces 4, because both 2s match each other, but no other digit has a match.
     [assert 4 [captcha '123425']]
;    123123 produces 12.
     [assert 12 [captcha '123123']]
;    12131415 produces 4.
     [assert 4 [captcha '12131415']]
;    stress test
     [assert 1146 [captcha '']]]]